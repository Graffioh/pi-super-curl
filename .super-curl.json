{
  "baseUrl": "https://openrouter.ai/api/v1",
  "timeout": 60000,
  "outputDir": "~/Desktop/api-responses",
  "envFile": ".env",
  "auth": {
    "type": "bearer",
    "token": "$OPENROUTER_API_KEY"
  },
  "headers": {
    "Content-Type": "application/json"
  },
  "endpoints": [
    {
      "name": "chat",
      "url": "/chat/completions",
      "method": "POST",
      "defaultBody": {
        "model": "openai/gpt-4o",
        "messages": []
      }
    },
    {
      "name": "models",
      "url": "/models",
      "method": "GET"
    },
    {
      "name": "auth-key",
      "url": "/auth/key",
      "method": "GET"
    },
    {
      "name": "generation",
      "url": "/generation",
      "method": "GET"
    }
  ],
  "templates": [
    {
      "name": "with-system",
      "description": "Chat with system prompt",
      "endpoint": "chat",
      "body": {
        "model": "openai/gpt-4o",
        "messages": [
          {
            "role": "system",
            "content": ""
          },
          {
            "role": "user",
            "content": ""
          }
        ],
        "temperature": 0.7,
        "max_tokens": 1000
      },
      "fields": [
        {
          "name": "system_prompt",
          "label": "System Prompt",
          "type": "multiline",
          "path": "messages[0].content"
        },
        {
          "name": "prompt",
          "label": "Prompt",
          "type": "multiline",
          "path": "messages[1].content"
        }
      ]
    },
    {
      "name": "gpt-oss-120b",
      "description": "Chat with GPT-OSS-120B (OpenAI open-weight model)",
      "endpoint": "chat",
      "body": {
        "model": "openai/gpt-oss-120b",
        "messages": [
          {
            "role": "user",
            "content": ""
          }
        ]
      },
      "fields": [
        {
          "name": "prompt",
          "label": "Prompt",
          "type": "multiline",
          "path": "messages[0].content"
        }
      ]
    },
    {
      "name": "gemini-flash-lite",
      "description": "Chat with Gemini 2.5 Flash Lite",
      "endpoint": "chat",
      "body": {
        "model": "google/gemini-2.5-flash-lite",
        "messages": [
          {
            "role": "user",
            "content": ""
          }
        ]
      },
      "fields": [
        {
          "name": "prompt",
          "label": "Prompt",
          "type": "multiline",
          "path": "messages[0].content"
        }
      ]
    },
    {
      "name": "kimi-k2.5",
      "description": "Chat with MoonshotAI Kimi K2.5",
      "endpoint": "chat",
      "body": {
        "model": "moonshotai/kimi-k2.5",
        "messages": [
          {
            "role": "user",
            "content": ""
          }
        ]
      },
      "fields": [
        {
          "name": "prompt",
          "label": "Prompt",
          "type": "multiline",
          "path": "messages[0].content"
        }
      ]
    }
  ]
}
