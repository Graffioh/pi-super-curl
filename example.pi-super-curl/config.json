{
  "baseUrl": "https://httpbin.org",
  "timeout": 30000,
  "envFile": ".env",
  "headers": {
    "User-Agent": "super-curl/1.0"
  },
  "customLogging": {
    "enabled": true,
    "outputDir": "~/Desktop/api-responses",
    "logs": {
      "backend": "/tmp/generation-output.txt"
    },
    "postScript": "process-output.js"
  },
  "endpoints": [
    {
      "name": "get",
      "url": "/get",
      "method": "GET"
    },
    {
      "name": "post",
      "url": "/post",
      "method": "POST",
      "defaultBody": {
        "source": "super-curl"
      }
    },
    {
      "name": "headers",
      "url": "/headers",
      "method": "GET"
    }
  ],
  "templates": [
    {
      "name": "quick-post",
      "description": "Quick POST with dynamic values",
      "endpoint": "post",
      "body": {
        "timestamp": "{{timestamp}}",
        "request_id": "{{uuid}}",
        "date": "{{date}}"
      }
    },
    {
      "name": "custom-post",
      "description": "POST with custom message",
      "endpoint": "post",
      "fields": [
        {
          "name": "message",
          "label": "Message",
          "path": "data.message"
        }
      ],
      "body": {
        "data": {
          "message": "",
          "created_at": "{{date}}"
        }
      }
    }
  ]
}
