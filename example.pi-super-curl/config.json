{
  "baseUrl": "$API_BASE_URL",
  "timeout": 30000,
  "envFile": ".env",
  "auth": {
    "type": "jwt",
    "secret": "$JWT_SECRET",
    "algorithm": "HS256",
    "expiresIn": 3600,
    "payload": {
      "user_id": "{{env.USER_ID}}",
      "email": "{{env.USER_EMAIL}}",
      "role": "authenticated"
    }
  },
  "headers": {
    "Content-Type": "application/json",
    "X-Org-Id": "{{env.ORG_ID}}"
  },
  "customLogging": {
    "enabled": true,
    "outputDir": "~/Desktop/api-responses",
    "logs": {
      "backend": "/tmp/generation-output.txt",
      "workflow": "logs/workflow.log"
    },
    "postScript": "process-output.js"
  },
  "endpoints": [
    {
      "name": "health",
      "url": "/health",
      "method": "GET"
    },
    {
      "name": "users",
      "url": "/api/users",
      "method": "POST",
      "defaultBody": {
        "source": "super-curl"
      }
    },
    {
      "name": "chat",
      "url": "/api/chat",
      "method": "POST",
      "stream": true,
      "defaultBody": {
        "chat_id": "{{uuidv7}}",
        "workspace_id": "{{env.WORKSPACE_ID}}",
        "content": ""
      }
    }
  ],
  "templates": [
    {
      "name": "quick-chat",
      "description": "Send a chat message",
      "endpoint": "chat",
      "appendField": true,
      "fields": [
        {
          "name": "prompt",
          "label": "Your message",
          "path": "content"
        }
      ]
    },
    {
      "name": "create-user",
      "description": "Create a new user",
      "endpoint": "users",
      "fields": [
        {
          "name": "name",
          "label": "Name",
          "path": "data.name"
        },
        {
          "name": "email",
          "label": "Email",
          "path": "data.email"
        }
      ],
      "body": {
        "request_id": "{{uuid}}",
        "timestamp": "{{timestamp}}",
        "data": {
          "name": "",
          "email": "",
          "org_id": "{{env.ORG_ID}}"
        }
      }
    }
  ]
}
